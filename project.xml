<?xml version="1.0" encoding="UTF-8"?>
<project
	xmlns="http://lime.openfl.org/project/1.0.4"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://lime.openfl.org/project/1.0.4 http://lime.openfl.org/xsd/project-1.0.4.xsd">

	<!--Application Settings-->

	<meta title="UTF" packageName="com.majigsaw77.utf" package="com.majigsaw77.utf" version="1.0.0" company="MAJigsaw77" />

	<app file="UTF" main="Main" path="export" preloader="flixel.system.FlxPreloader" />

	<!--Icon Settings -->

	<icon path="icon.png" />

	<!--Window Settings -->

	<window width="640" height="480" fps="30" orientation="landscape" background="#000000" hardware="true" vsync="false" resizable="false" />

	<window allow-high-dpi="true" unless="web" />

	<window fullscreen="true" if="mobile || switch" />

	<!--Path Settings-->

	<assets path="assets" />

	<source name="source" />

	<!--Defines-->

	<section if="cpp">
		<define name="DISCORD" if="desktop" />
	</section>

	<define name="MODS" if="desktop || mobile" />

	<!--Libraries-->

	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />

	<haxelib name="hscript" />
	<haxelib name="hxdiscord_rpc" if="DISCORD" />
	<haxelib name="polymod" if="MODS" />

	<haxelib name="extension-androidtools" if="android" />

	<!--Libraries Settings-->

	<haxedef name="hscriptPos" />

	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_MOUSE" if="mobile" />
	<haxedef name="FLX_NO_TOUCH" if="desktop" />

	<haxedef name="HXCPP_CHECK_POINTER" if="cpp" />
	<haxedef name="HXCPP_STACK_LINE" if="cpp" />
	<haxedef name="HXCPP_STACK_TRACE" if="cpp" />

	<haxedef name="DISCORD_DISABLE_IO_THREAD" if="DISCORD" />

	<haxedef name="POLYMOD_MOD_METADATA_FILE" value="meta.json" if="MODS" />
	<haxedef name="POLYMOD_MOD_PACK_FILE" value="pack.txt" if="MODS" />
	<haxedef name="POLYMOD_MOD_ICON_FILE" value="icon.png" if="MODS" />

	<haxeflag name="-dce" value="no" />

	<!--DPI Awareness-->

	<haxedef name="openfl_dpi_aware" unless="web" />

	<!--Undefinitions-->

	<undefine name="openfl-disable-handle-error" if="debug" />

	<!--Platforms Config-->

	<section if="android">
		<config>
			<!--Gradle-->
			<android gradle-version="7.4.2" gradle-plugin="7.3.1" />

			<!--Target SDK-->
			<android target-sdk-version="29" if="${lime &lt; 8.1.0}" />
		</config>
	</section>
</project>
